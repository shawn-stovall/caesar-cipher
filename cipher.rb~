# Implementing a simple Caesar Cipher
def cipher(text, displace)
  result = ""

  text.each { |char| result << shift(char, displace) }

  return result
end

# Shifts 
def shift(char, displace)
  int_rep = char.ord
  result = ""

  displaced = int_rep + 

  if displaced > 57
    result = (48 + (displace - 1)).chr
  elsif displaced > 90
    result = (65 + (displace - 1)).chr
  elsif displaced > 122
    result = (97 + (displace - 1)).chr
  end

  return result
end
